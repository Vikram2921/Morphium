// Example: Global and local variables

global PI = 3.14159

function calculateCircleArea(radius) {
  let squared = radius * radius
  return PI * squared
}

function calculateCircleCircumference(radius) {
  return 2 * PI * radius
}

{
  circles: map(input.circles, "c", {
    radius: c.radius,
    area: calculateCircleArea(c.radius),
    circumference: calculateCircleCircumference(c.radius)
  })
}
